class Solution:
    def checkStatus(self, a, b, flag):
        # code here
        if flag and a < 0 and b < 0:
            return True
        # Condition 1: exactly one non-negative and flag False
        elif not flag and ((a >= 0 and b < 0) or (a < 0 and b >= 0)):
            return True
        else:
            return False
